$side-bar-width = 300px
$container-margin = 5px

body, html, .app
    width 100%
    height 100%
    margin 0
    padding 0
    overflow hidden
    color #444

.app
    .container-with-border
        border 1px solid #b5bcc7

    .title-container
        position absolute
        top $container-margin
        left $container-margin
        right $container-margin
        padding 8px
        h1
            font-family Arial, sans-serif
            margin 5px 0 0 5px
            font-size 40px
            letter-spacing -2px
        .version
            font-size 10px
            text-decoration none
            vertical-align sub
            margin-left -10px
            letter-spacing 0
        .version:hover
            text-decoration underline !important
        .login-register-logout
            position absolute
            right 10px
            top 23px

    .side-bar-container
        width $side-bar-width
        overflow-y auto
        overflow-x hidden
        position absolute
        left $container-margin
        top 75px
        bottom $container-margin
        .select-button
            width 100%
            margin-top 5px
        .magic-zoom
            position relative
        .magic-zoom.first
            z-index 27
        .esriLegendServiceLabel
            display none
        .side-bar-padder
            padding 10px
            width $side-bar-width
            margin -1px
        .sherlock
            position relative
            width 100%
            .input-group
                width 100%
            .matches-table
                width 227px
        .search-container
            height 500px

    .center-container
        position absolute
        top 75px
        left $side-bar-width + (2 * $container-margin)
        bottom $container-margin
        right $container-margin
        overflow hidden
        [data-dojo-attach-point='mapDiv']
            position absolute
            top 0
            bottom 0
            left 0
            right 0
            .layer-selector
                max-width none
                label.layer-selector-items
                    max-width 200px
            .esriAttribution
                margin-right 70px


/* GENERAL STUFF */
/* remove orange outline in chrome */
*focus
    outline none
